{
  "name": "node-todos-json",
  "version": "1.0.0",
  "description": "API CRUD simples em Node.js com JSON como banco de dados e testes unit√°rios com Jest.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test DB_FILE=.tmp/test-db.json node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "coverage": "npm test -- --coverage"
  },
  "keywords": [
    "nodejs",
    "crud",
    "json",
    "express",
    "jest",
    "api"
  ],
  "author": "Claudio Martin Bianco",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageProvider": "v8",
    "collectCoverage": true,
    "collectCoverageFrom": ["server.js"],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
